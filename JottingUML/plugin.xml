<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<extension point="org.eclipse.ui.editors">
		<editor
			name="JottingUML"
			extensions="jul"
			icon="icons/jul.png"
			contributorClass="org.kotemaru.eclipse.jottinguml.ActionContributor"
			class="org.kotemaru.eclipse.jottinguml.BrowserEditor"
			id="org.kotemaru.eclipse.jottinguml.editors.BrowserEditor">
		</editor>
	</extension>

	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.kotemaru.eclipse.jottinguml.Preference"/>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<wizard
			class="org.kotemaru.eclipse.jottinguml.NewWizard"
			icon="icons/jul.png"
			id="org.kotemaru.eclipse.jottinguml.NewWizaed"
			name="JottingUML">
		</wizard>
	</extension>
 
	<extension point="org.eclipse.ui.actionSets">
		<actionSet label="JottingUML" visible="true"
				id="org.kotemaru.eclipse.jottinguml.ActionSet">
		    <action label="redo"
				icon="icons/redo.png"
				toolbarPath="JottingUML"
				tooltip="REDO"
				retarget="true"
				id="redo"
			></action>
		    <action label="undo"
				icon="icons/undo.png"
				toolbarPath="JottingUML"
				tooltip="UNDO"
				retarget="true"
				id="undo"
			></action>
		</actionSet>
	</extension>

</plugin>
