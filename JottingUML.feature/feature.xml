      Apache license 2.0.
   </license>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.ui.ide" version="3.7.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.core.resources" version="3.7.100" match="greaterOrEqual"/>
      <import plugin="org.eclipse.gef" version="3.7.2" match="greaterOrEqual"/>
      <import plugin="org.eclipse.equinox.security" version="1.1.1" match="greaterOrEqual"/>
   </requires>

